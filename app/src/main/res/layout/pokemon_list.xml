<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:elevation="6dp"
    android:textAlignment="center"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="89dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="352dp"
            android:layout_height="match_parent"
            android:background="#B9E4DDDD">

            <ImageView
                android:id="@+id/ivPokeball"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/pokeball"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/tvPokeID"
                android:layout_width="32dp"
                android:layout_height="18dp"
                android:layout_alignStart="@+id/ivPokeball"
                android:layout_alignTop="@+id/ivPokeball"
                android:layout_alignEnd="@+id/ivPokeball"
                android:layout_alignBottom="@+id/ivPokeball"
                android:layout_marginStart="-11dp"
                android:layout_marginTop="-18dp"
                android:layout_marginEnd="43dp"
                android:layout_marginBottom="61dp"
                android:background="#B9E4DDDD"
                android:hint="@string/pokeNum"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#FFAB00"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                tools:ignore="TextContrastCheck" />

            <LinearLayout
                android:layout_width="159dp"
                android:layout_height="63dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/ivPokeball"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPokeNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:hint="@string/listaNom"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>